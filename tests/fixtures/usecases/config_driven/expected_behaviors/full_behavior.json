{
  "config_name": "full_config",
  "expected_behavior": {
    "prompts": {
      "template_dir": "prompts",
      "schema_dir": "schema", 
      "custom_variables_count": 3,
      "variable_substitution": "advanced",
      "custom_delimiters": ["${", "}"],
      "template_patterns": {
        "directive_types": ["to", "summary", "find", "defect"],
        "layer_types": ["project", "issue", "task", "bugs"]
      }
    },
    "output": {
      "format": "markdown",
      "includes_timestamp": true,
      "includes_metadata": true,
      "custom_headers": [
        "Generated by Breakdown",
        "Environment: ${environment}"
      ],
      "file_naming": {
        "pattern": "${directive}_${layer}_${timestamp}",
        "extension": ".md"
      }
    },
    "processing": {
      "timeout_seconds": 30,
      "max_file_size": "10MB",
      "concurrent_processing": true
    },
    "error_handling": {
      "continue_on_error": false,
      "log_errors": true,
      "user_friendly_messages": true
    },
    "logging": {
      "level": "debug",
      "output_method": "both",
      "file_path": "logs/breakdown.log",
      "rotation_enabled": true,
      "max_size": "50MB"
    },
    "workflows": {
      "available_workflows": ["basic", "bug_detection", "team_collaboration"],
      "custom_workflows": 2,
      "bug_detection": {
        "enabled": true,
        "severity_threshold": "medium",
        "report_format": "detailed"
      },
      "team_collaboration": {
        "enabled": true,
        "include_assignee": true,
        "include_deadline": true,
        "notification_enabled": false
      }
    }
  },
  "validation_criteria": {
    "required_fields": [
      "app_name", "version", "prompts", "output", "processing",
      "error_handling", "logging", "workflows"
    ],
    "optional_fields": ["profile"],
    "performance": {
      "load_time_ms": "<300",
      "memory_usage": "moderate"
    },
    "features": {
      "custom_variables": true,
      "template_patterns": true,
      "advanced_output": true,
      "error_handling": true,
      "file_rotation": true,
      "workflows": true
    }
  }
}