{
  "name": "breakdown",
  "version": "1.0.0",
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "$std/": "https://deno.land/std@0.210.0/",
    "$deps/": "./deps/",
    "$lib/": "./lib/",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^1.0.0"
  },
  "tasks": {
    "test": "deno test -A",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": false,
    "lineWidth": 100
  },
  "lint": {
    "files": {
      "include": ["lib/", "tests/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  }
} 