{
  "name": "breakdown",
  "version": "0.1.0",
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "$std/": "https://deno.land/std@0.210.0/",
    "$deps/": "./deps/",
    "$lib/": "./lib/",
    "@tettuan/breakdownconfig": "jsr:@tettuan/breakdownconfig@^1.0.6",
    "@tettuan/breakdownparams": "jsr:@tettuan/breakdownparams@^0.1.8",
    "@tettuan/breakdownprompt": "jsr:@tettuan/breakdownprompt@^0.1.0",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^0.1.0",
    "@tettuan/breakdownparser": "jsr:@tettuan/breakdownparser@^0.1.0",
    "@tettuan/breakdownworkspace": "jsr:@tettuan/breakdownworkspace@^0.1.0"
  },
  "tasks": {
    "test": "deno test --allow-env --allow-write --allow-read",
    "test:watch": "deno test --watch --allow-env --allow-write --allow-read",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": false,
    "lineWidth": 100
  },
  "lint": {
    "files": {
      "include": ["lib/", "tests/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  }
} 