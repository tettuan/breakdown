{
  "name": "@tettuan/breakdown",
  "version": "1.0.2",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli/breakdown.ts"
  },
  "bin": {
    "breakdown": "./cli/breakdown.ts"
  },
  "imports": {
    "$std/": "jsr:@std/",
    "$deps/": "./deps/",
    "$lib/": "./lib/",
    "$test/": "./tests/",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/fs": "jsr:@std/fs@^0.224.0",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/path": "jsr:@std/path@^0.224.0",
    "@tettuan/breakdown": "jsr:@tettuan/breakdown@^0.1.4",
    "@tettuan/breakdownconfig": "jsr:@tettuan/breakdownconfig@^1.0.11",
    "@tettuan/breakdownparams": "jsr:@tettuan/breakdownparams@^0.1.11",
    "@tettuan/breakdownprompt": "jsr:@tettuan/breakdownprompt@1.2.0",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^0.1.10"
  },
  "publish": {
    "include": [
      "README.md",
      "LICENSE",
      "mod.ts",
      "lib/",
      "cli/"
    ],
    "exclude": [
      "**/日本語.*",
      "**/*.ja.*"
    ]
  },
  "tasks": {
    "test": "deno test --allow-env --allow-write --allow-read --allow-run",
    "test:watch": "deno test --watch --allow-env --allow-write --allow-read --allow-run",
    "check": "deno check **/*.ts",
    "ci": "sh scripts/local_ci.sh"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": false,
    "lineWidth": 100,
    "exclude": [
      "examples/",
      "**/*.md",
      "**/*.markdown"
    ]
  },
  "lint": {
    "include": [
      "lib/",
      "tests/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.window"
    ]
  }
}
