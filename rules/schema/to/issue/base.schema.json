{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["gitHubIssueNumber", "title", "summary", "tasks"],
  "properties": {
    "gitHubIssueNumber": {
      "type": "integer",
      "description": "GitHub issue number"
    },
    "title": {
      "type": "string",
      "description": "Issue title"
    },
    "summary": {
      "type": "string",
      "description": "Issue summary"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "task.schema.json"
      }
    }
  }
} 