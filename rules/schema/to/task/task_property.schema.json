{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["taskType", "name", "value"],
  "properties": {
    "taskType": {
      "type": "string",
      "description": "Type of the task property"
    },
    "name": {
      "type": "string",
      "enum": [
        "Work Branch",
        "Prohibited Files"
      ],
      "description": "Name of the task property"
    },
    "value": {
      "type": "string",
      "description": "Value of the task property"
    },
    "description": {
      "type": "string",
      "description": "Description of the task property"
    }
  }
} 